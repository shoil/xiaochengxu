.book{
    width:240rpx;
    height:360rpx;
    border-radius: 15rpx;
    background: #fff;
    box-shadow: 0 0 10px 3px rgb(204, 203, 203);
    position: relative;
}
.image{
    width:100%;
    height:100%;
    border-radius: 15rpx;
}
.book-detail{
    border-top: 1px solid #eee;
    position: absolute;
    height:140rpx;
    width:100%;
    bottom: 0;
    left:0;
    background: #fff;
    z-index: 100;
    border-bottom-left-radius: 15rpx;
    border-bottom-right-radius: 15rpx;
}
.book-detail{
    
    font-size: 20rpx;
    color:#C5C5C5;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.title{
    font-size: 25rpx;
    color:#333;
}
.book-detail text{
    margin-left: 20rpx;
}
.like{
    align-self: flex-end;
    margin-right: 20rpx;
}